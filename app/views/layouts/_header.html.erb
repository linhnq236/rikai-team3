<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar" id="myNavbar">
    <a class="w3-bar-item w3-button w3-hover-black w3-hide-medium w3-hide-large w3-right" href="javascript:void(0);" onclick="toggleFunction()" title="Toggle Navigation Menu">
      <i class="fa fa-bars"></i>
    </a>
     <div> <%= link_to "Trang chủ", root_url , class:"w3-bar-item w3-button" , style:"color:yellow; font-weight: bold; font-family: Times New Roman; font-size:1.2em "%>
      <% if logged_in? %>
        <%= link_to "Đăng xuất", logout_path, method: :delete, class:"w3-bar-item w3-button" , style:"color:yellow; float:right; font-weight: bold; font-family: Times New Roman; font-size:1.2em" %>            
        <% unless current_user.admin %>
        <div class="w3-bar-item w3-button" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:yellow; font-weight: bold; font-family: Times New Roman; font-size:1.2em ">
                      Thông tin cá nhân <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" style="margin-left: 125px;">
              <li><%= link_to 'Xem thông tin cá nhân' , current_user, style:"color:black; font-weight: bold; font-family: Times New Roman; font-size:1.2em " %></li>
              <li><%= link_to 'Cập nhập thông tin cá nhân' , edit_user_path(current_user) , style:"color:black; font-weight: bold; font-family: Times New Roman; font-size:1.2em "%></li>
              </ul>
        </div>
        <% end %>
        <a class="w3-bar-item w3-button" style="color:yellow;float: right ;font-size: 1.2em; font-family: Times New Roman; font-weight: bold">
        Chào <%= current_user.hoten %>
        </a>
       <% if current_user.admin %>
       <%= link_to "Quản trị", quantri_path, class:"w3-bar-item w3-button" , style:"color:yellow; float:right; font-weight: bold; font-family: Times New Roman; font-size:1.2em" %>
        <% end %>
   <% else %>
        <%= link_to "Đăng nhập", login_path, class:"w3-bar-item w3-button" , style:"color:yellow; font-weight: bold;font-family: Times New Roman; font-size:1.2em"%>
    <% end %>
    </div>
    </a>
  </div>
</div>

<!-- First Parallax Image with Logo Text -->
<div class="bgimg-1 w3-display-container w3-opacity-min" id="home">
  <div class="w3-display-middle" style="white-space:nowrap;">
    <span class="w3-center w3-padding-large w3-black w3-xlarge w3-wide w3-animate-opacity">Thư<span class="w3-hide-small">Viện</span>^^</span>
  </div>
</div>
 <%= render 'layouts/shim' %>
